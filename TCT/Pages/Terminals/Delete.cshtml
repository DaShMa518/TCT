@page "{id:int?}"
@model TCT.Pages.Terminals.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@*<p class="text-danger">@Model.ErrorMessage</p>*@

<h3>Are you sure you want to delete this?</h3>

<hr />
<hr />
<table id="TermTable" class="table">
    <thead class="table-danger">
        <tr>
            <th>Part No</th>
            <th>Manufacturer</th>
            <th>Class ID</th>
        </tr>
    </thead>
    <tbody id="TableBody">
        <tr>
            <td>@Html.DisplayFor(model => model.Terminal.PartNo)</td>
            <td>@Html.DisplayFor(model => model.Terminal.Manufacturer.Name)</td>
            <td>@Html.DisplayFor(model => model.Terminal.TermClass.Name)</td>
        </tr>
    </tbody>
</table>
<hr />

<div>
    <form method="post">
        <input type="hidden" asp-for="Terminal.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Details" asp-route-id="@Model.Terminal.Id">Back to Terminal</a>
    </form>
</div>
