@page
@model TCT.Pages.Terminals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Terminal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Terminal.PartNo" class="control-label"></label>
                <input asp-for="Terminal.PartNo" class="form-control" />
                <span asp-validation-for="Terminal.PartNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.Manufacturer" class="control-label"></label>
                <select asp-for="Terminal.ManufacturerId" class="form-control"
                        asp-items="@Model.ManufacturerSelectionSL">
                    <option value="">-- Select Manufacturer --</option>
                    @*<option value="">-- Add New Manufacturer --</option>*@
                </select>
                <span asp-validation-for="Terminal.ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.TermClass" class="control-label"></label>
                <select asp-for="Terminal.TermClassId" class="form-control"
                        asp-items="@Model.TermClassSelectionSL">
                        <option value="">-- Select Class --</option>
                </select>
                <span asp-validation-for="Terminal.TermClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.MinWireAWG" class="control-label"></label>
                <input asp-for="Terminal.MinWireAWG" class="form-control" />
                <span asp-validation-for="Terminal.MinWireAWG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.MaxWireAWG" class="control-label"></label>
                <input asp-for="Terminal.MaxWireAWG" class="form-control" />
                <span asp-validation-for="Terminal.MaxWireAWG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.MinInsulDiam" class="control-label"></label>
                <input asp-for="Terminal.MinInsulDiam" class="form-control" />
                <span asp-validation-for="Terminal.MinInsulDiam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.MaxInsulDiam" class="control-label"></label>
                <input asp-for="Terminal.MaxInsulDiam" class="form-control" />
                <span asp-validation-for="Terminal.MaxInsulDiam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.StripLength" class="control-label"></label>
                <input asp-for="Terminal.StripLength" class="form-control" />
                <span asp-validation-for="Terminal.StripLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.DimFront" class="control-label"></label>
                <input asp-for="Terminal.DimFront" class="form-control" />
                <span asp-validation-for="Terminal.DimFront" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.DimRear" class="control-label"></label>
                <input asp-for="Terminal.DimRear" class="form-control" />
                <span asp-validation-for="Terminal.DimRear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
