@page
@model TCT.Pages.Tools.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tool</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tool.InternalId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tool.InternalId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tool.ModelNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tool.ModelNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tool.SerialNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tool.SerialNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tool.TermToolXrefs)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Tool Id</th>
                </tr>
                @foreach (var item in Model.Tool.TermToolXrefs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Terminal.PartNo)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Tool?.Id">Edit</a> |
