@page
@model TCT.Pages.Tools.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tool</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tool.Id" />
            <div class="form-group">
                <label asp-for="Tool.InternalId" class="control-label"></label>
                <input asp-for="Tool.InternalId" class="form-control" />
                <span asp-validation-for="Tool.InternalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.ModelNo" class="control-label"></label>
                <input asp-for="Tool.ModelNo" class="form-control" />
                <span asp-validation-for="Tool.ModelNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.SerialNo" class="control-label"></label>
                <input asp-for="Tool.SerialNo" class="form-control" />
                <span asp-validation-for="Tool.SerialNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.Manufacturer" class="control-label"></label>
                <select asp-for="Tool.ManufacturerId" class="form-control"
                        asp-items="@Model.ManufacturerSelectionSL">
                    <option value="">-- Select Manufacturer --</option>
                </select>
                <span asp-validation-for="Tool.ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.EquipType" class="control-label"></label>
                <select asp-for="Tool.EquipTypeId" class="form-control"
                        asp-items="@Model.EquipTypeSelectionSL">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="Tool.EquipTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
