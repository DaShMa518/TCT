@page "{id:int?}"
@model TCT.Pages.Tools.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@*<p class="text-danger">@Model.ErrorMessage</p>*@

<h3>Are you sure you want to delete this?</h3>

<hr />
<hr />
<table id="ToolTable" class="table">
    <thead class="table-danger">
        <tr>
            <th>Internal ID</th>
            <th>Model No</th>
            <th>Serial No</th>
            <th>Manufacturer</th>
            <th>Tool Type</th>
        </tr>
    </thead>
    <tbody id="TableBody">
        <tr>
            <td>@Html.DisplayFor(model => model.Tool.InternalId)</td>
            <td>@Html.DisplayFor(model => model.Tool.ModelNo)</td>
            <td>@Html.DisplayFor(model => model.Tool.SerialNo)</td>
            <td>@Html.DisplayFor(model => model.Tool.Manufacturer.Name)</td>
            <td>@Html.DisplayFor(model => model.Tool.EquipType.Name)</td>

        </tr>
    </tbody>
</table>
<hr />

<div>
    <form method="post">
        <input type="hidden" asp-for="Tool.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Details" asp-route-id="@Model.Tool.Id">Back to Tool</a>
    </form>
</div> 
