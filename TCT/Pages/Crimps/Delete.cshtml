@page "{id:int?}"
@model TCT.Pages.Crimps.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<hr />
<hr />
<table id="CrimpTable" class="table">
    <thead class="table-danger">
        <tr>
            <th>Terminal</th>
            <th>Tool</th>
            <th>Wire AWG</th>
            <th>Crimp Height</th>
            <th>Pull Force</th>
        </tr>
    </thead>
    <tbody id="TableBody">
        <tr>
            <td>@Html.DisplayFor(model => model.Crimp.Terminal.PartNo)</td>
            <td>@Html.DisplayFor(model => model.Crimp.Tool.InternalId)</td>
            <td>@Html.DisplayFor(model => model.Crimp.WireAWG)</td>
            <td>@Html.DisplayFor(model => model.Crimp.CrimpHeight)</td>
            <td>@Html.DisplayFor(model => model.Crimp.PullForce)</td>

        </tr>
    </tbody>
</table>
<hr />

<div>
    <form method="post">
        <input type="hidden" asp-for="Crimp.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Details" asp-route-id="@Model.Crimp.Id">Back to Crimp</a>
    </form>
</div>
